# procedure call with if and while
var result;

procedure AddTwoNumbers;
   const a = 2, b = 1;
   result := 0

   while result < (a + b)
   do
      begin
         if result = 1
            then write 1 # Should write 1
            else skip
         result := result + 1
      end

begin
   call AddTwoNumbers
   write result # should write 3
end.