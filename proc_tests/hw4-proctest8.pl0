# nested recursive procedure call

var result;

procedure IncreaseByOne;
   procedure Inner;
      begin
         result := result + 1 ;
         write result; # should write result + 1 
         call IncreaseByOne 
      end;

   if result < 8
      then
         call Inner
      else skip;

begin
   result := 0;
   call IncreaseByOne
end.